<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://www.blizzard.com/wow/ui/">
	<Button name="StoryTellerButton" parent="Minimap">
		<Size>
			<AbsDimension x="32" y="32"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Layers level="OVERLAY">
			<Layer level="ARTWORK">
				<Texture name="StoryTellerButton_Icon" file="Interface\Icons\Inv_misc_book_08">
					<Size>
						<AbsDimension x="16" y="16"/>
					</Size>
					<Anchors>
						<Anchor point="CENTER" />
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture name="StoryTellerButton_Border" file="Interface\Minimap\MiniMap-TrackingBorder">
					<Size>
						<AbsDimension x="48" y="48"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="2" y="-2"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="StoryTellerButton_DraggingFrame" hidden="true">
				<Size>
					<AbsDimension x="32" y="32"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER" />
				</Anchors>
				<Scripts>
					<OnUpdate>
						StoryTellerButton.DraggingFrame_OnUpdate()
					</OnUpdate>
				</Scripts>
			</Frame>
		</Frames>
		<HighlightTexture alphaMode="ADD" file="Interface\Minimap\UI-Minimap-ZoomButton-Highlight"/>
		<Scripts>
			<OnMouseDown>
				StoryTellerButton.OnMouseDown()
			</OnMouseDown>
			<OnMouseUp>
				StoryTellerButton.OnMouseUp()
			</OnMouseUp>
			<OnLoad>
				self:SetFrameLevel(Minimap:GetFrameLevel()+1000)
				self:RegisterForClicks("LeftButtonUp","RightButtonUp")
				self:RegisterForDrag("LeftButton","RightButton")
			</OnLoad>
			<OnDragStart>
				self:LockHighlight()
				StoryTellerButton_DraggingFrame:Show()
				StoryTellerButton.OnMouseDown()
			</OnDragStart>
			<OnDragStop>
				self:UnlockHighlight()
				StoryTellerButton_DraggingFrame:Hide()
				StoryTellerButton.OnMouseUp()
			</OnDragStop>
			<OnEnter>
				StoryTellerButton.ShowTooltip()
			</OnEnter>
			<OnLeave>
				StoryTellerButton.HideTooltip()
			</OnLeave>
		</Scripts>
	</Button>
</Ui>